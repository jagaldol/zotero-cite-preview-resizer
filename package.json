{
  "name": "zotero-cite-preview-resizer",
  "type": "module",
  "version": "1.0.0",
  "description": "Resize Zotero cite/preview popups with drag and prefs",
  "config": {
    "addonName": "Zotero Cite Preview Resizer",
    "addonID": "zoterocitepreviewresizer@local",
    "addonRef": "zoterocitepreviewresizer",
    "addonInstance": "ZoteroCitePreviewResizer",
    "prefsPrefix": "extensions.zotero.zoterocitepreviewresizer"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jagaldol/zotero-cite-preview-resizer.git"
  },
  "bugs": {
    "url": "https://github.com/jagaldol/zotero-cite-preview-resizer/issues"
  },
  "homepage": "https://github.com/jagaldol/zotero-cite-preview-resizer#readme",
  "author": "jagaldol",
  "license": "AGPL-3.0-or-later",
  "scripts": {
    "start": "zotero-plugin serve",
    "build": "zotero-plugin build && tsc --noEmit",
    "lint:check": "prettier --check . && eslint .",
    "lint:fix": "prettier --write . && eslint . --fix",
    "release": "zotero-plugin release",
    "test": "zotero-plugin test",
    "update-deps": "npm update --save"
  },
  "dependencies": {
    "zotero-plugin-toolkit": "^5.1.0-beta.9"
  },
  "devDependencies": {
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.5.2",
    "@zotero-plugin/eslint-config": "^0.6.7",
    "chai": "^6.0.1",
    "eslint": "^9.36.0",
    "mocha": "^11.7.2",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "zotero-plugin-scaffold": "^0.8.0",
    "zotero-types": "^4.1.0-beta.3"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "endOfLine": "lf",
    "overrides": [
      {
        "files": [
          "*.xhtml"
        ],
        "options": {
          "htmlWhitespaceSensitivity": "css"
        }
      }
    ]
  }
}
